body
  font-family Calibri
  color white
  background-color #1924B1

header
  display none
nav
  display flex
  flex-direction row
  justify-content center
  font-weight bold
  background-color #0D58A6
  a
    padding 10px 20px
    margin 5px
    color white
    text-decoration none
    background-color #4188D2
    &:hover
      background-color #75cfd2
    &.active
      background-color #75cfd2
aside
  display none
footer
  display none

.images
  display flex
  align-items center
  justify-content space-evenly
  flex-wrap wrap
  background-color #1924B1
  margin 0 0 20 0
  a
    height: 10em
    margin 10px
    &:hover
      height 12em
      background-color #689CD2
  img
    width: 100%
    height: 100%
    padding: 5px

section
  display flex
  justify-content space-evenly
  margin 0 0 20 0
  background-color #0D58A6
  .imgg
    display flex
    justify-content center
    height 300px
    img
      border white solid
      height 98%
  .info
    padding 0 20
    display flex
    flex-direction column

.info
  text-align justify
  line-height 1.5
  text-indent 30px

@media (max-width 600px)
  body
    min-height auto
    min-width auto
  section
    flex-direction column
    .imgg
      height 200px
  nav
    flex-wrap wrap
  .text
    font-size small
    line-height 1.5